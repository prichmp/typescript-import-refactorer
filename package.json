{
  "name": "typescript-import-refactorer",
  "version": "1.0.0",
  "description": "Easily refactor imports in TypeScript files via the CLI.",
  "main": "index.js",
  "type": "commonjs",
  "keywords": [
    "typescript",
    "import",
    "refactoring",
    "codemod"
  ],
  "author": "April Prichard",
  "license": "MIT",
  "scripts": {
