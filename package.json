  },
  "dependencies": {
    "chalk": "^4.1.2",
    "glob": "^8.0.3",
    "ts-morph": "^15.0.0",
    "yargs": "13.1.0"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/glob": "^7.2.0",
    "@types/node": "^17.0.35",
